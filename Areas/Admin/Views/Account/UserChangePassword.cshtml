@{
}
@using ESTA.ViewModels
@model ESTA.ViewModels.ChangePassword
<style>
    .form-label {
        top: -15px !important;
        color: blueviolet;
    }

</style>

<div class="row" style="justify-content:center ; height:100%;align-items:center">
    <div class="col-md-6">
        <br /><br />
        <section>
            <form id="Account" asp-action="UserChangePassword" method="post">
                <h2> @localizer["changepassheader"] </h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.CurrentPassword" class="form-label"></label>
                    <input type="password" asp-for="@Model.CurrentPassword" class="form-control" />

                    <span asp-validation-for="@Model.CurrentPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.NewPassword" class="form-label"></label>
                    <input type="password" asp-for="@Model.NewPassword" class="form-control" />

                    <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
                    <p class="text-success">
                        @localizer["passNote"]
                    </p>
                </div>


                <div class="mb-3">
                    <label asp-for="@Model.ConfirmPassword" class="form-label"></label>
                    <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" />

                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                </div>

                <div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">@localizer["submit"]</button>
                </div>
                <div>
                </div>
            </form>
        </section>
    </div>

</div>




@section Scripts{
    @{
        await Html.RenderPartialAsync("_validationscriptspartial.cshtml");
    }
}
