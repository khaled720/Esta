@{

   Layout="_AdminLayout";

}
@model IEnumerable<ESTA.Models.Contact>



<div class="page-head">
<h2>@localizer["contacts"]</h2>
@Html.ActionLink(localizer["addcontact"],"AddContact",null,null,new { @class="btn btn-primary"})
</div>
<br />

<div class="rounded-div">



<table id="courses-table" class="table table-striped">
    <thead>
        <tr>
            <th> @localizer["addressinfo"]</th>

            <th>@localizer["emailus"]</th>
      
            <th></th>
            <th>@localizer["actions"]</th>

        </tr>

    </thead>
    <tbody>


        @{
            foreach (var item in Model)
            {
                    <tr>
                        <td>@item.AddressEn</td>
                        <td>@item.Emails</td>
                    
                        <td></td>

                        <td>
                            @Html.ActionLink(localizer["edit"], "EditContact", new { id = item.Id }, new { @class = "btn btn-success" }) |
                            @Html.ActionLink(localizer["delete"], "DeleteContact", new { id = item.Id }, new { @class = "btn btn-danger", onclick = "return confirm('Are you Sure to delete , data will be lost?');" })
                        </td>
                    </tr>
            }
        }
    </tbody>
</table>
</div>