@{
}
@model List<ESTA.ViewModels.DisplayEvents>




    <table class="table table-striped">


        <thead>
            <tr>

                <th>@localizer["eventtitle"]</th>
                <th>@localizer["eventtype"]</th>
                <th>@localizer["eventdate"]</th>
            </tr>

        </thead>

        <tbody>
@foreach (var eventObj in Model)
{



            <tr>
                <td>
                    <a class="h6" asp-action="GetEvent" asp-route-id="@eventObj.Id" asp-controller="EventsNews" asp-area="Admin">
                        @eventObj.Title
                    </a>

                </td>
                <td>
                    @if (eventObj.Flag == 1)
                    {
                        <span class="blog-category">@ESTA.Resources.EventsNews.News</span>
                    }
                    else
                    {
                        <span class="blog-category">@ESTA.Resources.EventsNews.Event</span>
                    }
                </td>

                <td>
                    @if (eventObj.Date.HasValue)
                    {
                        <div class="blog-meta">
                            <span>@eventObj.Date.Value.ToString("yyyy-MMM-dd")</span>
                        </div>
                    }
                    else
                    {
                        <div class="blog-meta">
                            <span>-</span>
                        </div>
                    }
                </td>

            </tr>
            }
        </tbody>



    </table>










