@{
}

@model ESTA.ViewModels.NewModerator;


<form onkeypress="submitForm(event)" asp-action="NewModerator" asp-controller="Moderator" asp-area="Admin" method="post">
 <div class="rounded-div">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="form-group">
                  <label asp-for="@Model.Email"></label>
        <input class="form-control" id="Email" type="text" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.FullName"></label>
        <input class="form-control" id="FullName" type="text" asp-for="FullName" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Password"></label>
        <input class="form-control" id="Password" type="password" asp-for="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ConfirmPassword"></label>
        <input class="form-control" id="ConfirmPassword" type="password" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="SelectForum" class="form-label">@localizer["forums"]</label>
        <select asp-for="SelectForum" class="form-select select2" id="SelectForum" asp-items="ViewBag.SelectForum" multiple="multiple">
        </select>
        <span asp-validation-for="SelectForum" class="text-danger"></span>
    </div>
    </div>
    <div class="form-group">
        <button type="submit" id="submit" class="btn btn-primary">@localizer["submit"]</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_validationscriptspartial.cshtml");
    }

    <script>
        $(document).ready(function () {
            $('.select2').select2();
            LoadTable()
        });
    </script>
}