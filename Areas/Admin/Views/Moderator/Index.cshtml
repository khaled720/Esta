@{
}

@model IEnumerable<ESTA.ViewModels.ViewModerator>;

<a class="btn btn-danger" asp-action="NewModerator" asp-controller="Moderator" asp-area="Admin">New Moderator</a>

<div class="rounded-div" >

	<table id="courses-table" class="table table-striped animate__fadeIn " style="animation-duration:1s">
		<thead>
			<tr>
				<th>FullName</th>
				<th>UserName</th>
				<th colspan="3">Edit</th>
			</tr>
		</thead>
		<tbody>

			@{
				foreach (var item in Model)
				{
					<tr>
						<td>@item.Name</td>
						<td>@item.UserName</td>
						<td>
							<a asp-action="EditModerator" asp-controller="Moderator" asp-area="Admin" asp-route-id="@item.Id">Edit</a>
						</td>
					</tr>
				}
			}
		</tbody>
	</table>
</div>