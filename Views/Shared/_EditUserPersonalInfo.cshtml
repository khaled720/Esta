@model ESTA.ViewModels.EditUserPersonalInfoViewModel

<form method="post" asp-action="EditPersonalInfo"  enctype="multipart/form-data" asp-controller="Users">
    @Html.HiddenFor(y=>y.Id)


    <h3>Personal</h3>



    <div class="row">
        <div class="form-group col-lg-6 col-sm-12">
            <label asp-for=@Model.FullName></label>
            <input asp-for="@Model.FullName" class="form-control"
                   autocomplete="name" />

            <span asp-validation-for="@Model.FullName" class="text-danger"></span>
        </div>

        <div class="form-group col-lg-6 col-sm-12">
            <label asp-for="@Model.FullNameAr"></label>
            <input asp-for="@Model.FullNameAr" class="form-control"
                   autocomplete="name" />

            <span asp-validation-for="@Model.FullNameAr" class="text-danger"></span>
        </div>

    </div>

    <div class="form-group">
        <label asp-for="@Model.MembershipNumber"></label>
        <input asp-for="@Model.MembershipNumber" class="form-control"
               autocomplete="username" />

        <span asp-validation-for="@Model.MembershipNumber" class="text-danger"></span>
    </div>

  


    <div class="">
        @if (string.IsNullOrEmpty(Model.NationalCardID)) {
          <div class="form-group ">
            <label asp-for="@Model.Passport"></label>
            <input  asp-for="@Model.Passport" class="form-control"
                   autocomplete="username" />

            <span asp-validation-for="@Model.Passport" class="text-danger"></span>
                @{
                    var counter = 0;
                    foreach(var image in Model.userImages)
                    {
                        if(image.TypeId ==2)
                        {
                            counter++;
                            <a href="@image.Path" target="_blank">
                                <img src="@Url.Content("~"+image.Path)" width="150" height="150" />
                     </a>
                        }


                    }

                    if(counter == 0)
                    {
                        <p>No Passport Photos Were Found</p>
                        <input asp-for="@Model.PassportImages" type="file" multiple class="form-control" />
                    }
                }
        </div>

        
        }else{
           <div class="form-group  ">
            <label asp-for="@Model.NationalCardID"></label>
          
           
            <input  asp-for="@Model.NationalCardID" class="form-control"
                   autocomplete="username" />
       
            <span asp-validation-for="@Model.NationalCardID" class="text-danger"></span>
                @{
                    var counter=0;
                    foreach(var image in Model.userImages)
                    {
                        @if(image.TypeId==1)
                        {
                            counter++;
                            <a href="@image.Path" target="_blank">             <img src="@Url.Content("~"+image.Path)" width="150" height="150" />
                            </a>
               
                }


            }

            @if(counter==0)
                    {
                        <p>No National Id  Were Found</p>
                        <input asp-for="@Model.NationalIdImages" type="file" multiple class="form-control" />
                    }
            }
           
            </div>

        }
     
      
    </div>

    <div class="form-group">
        <label asp-for="@Model.Email"></label>
        <input  asp-for="@Model.Email" class="form-control"
               autocomplete="username" />

        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
