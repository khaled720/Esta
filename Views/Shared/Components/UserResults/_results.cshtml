@model IEnumerable<ESTA.Models.UserCourse>

@{
    ViewData["Title"] = "_results";
}

@*<h1>_results</h1>*@




@if (Model.Count()>0)
{
    


<table class="table table-borderless">
    <thead>
        <tr>
            <th>
@localizer["coursename"]
            </th>
            <th>
                @localizer["coursegrade"]
                </th>
                <th>
                   @localizer["percent"]
                </th>
                <th>
                    @localizer["state"]
                </th>

            <th>
                @localizer["enrolldate"]
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {


            <tr>
            <td>
              @item.course.Title
            </td>
            <td>
						
                @item.course.FinalGrade  / @item.Grade

            </td>
               <td>
             @(item.Grade*item.course.FinalGrade/100)%
            </td>
            <td>
                @if (item.StateId==3)
                {
                    <h4 class="text-success"> @localizer["pass"] </h4>
                }else
                {
                            <h4 class="text-danger"> @localizer["fail"] </h4>
                }
            </td>
                <td>
                    @item.EnrollmentDate.ToShortDateString()
                </td>
        </tr>


            
        }






    </tbody>
</table>
}else{

    <h3 class="text-danger " > @localizer["notfound"]</h3>

}