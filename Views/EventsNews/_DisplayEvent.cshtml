@{
}
@model ESTA.ViewModels.DisplayEventPartial

@if (Model.EventsList.Count > 0)
{
    <div class="blog-grid-area pt-50 pb-50">
        <div class="container">
            <div class="blog-grid-list">
                <div id="cards@(Model.DivId)" class="row">
                    @{
                        await Html.RenderPartialAsync("_renderEvent", Model.EventsList);
                    }
                </div>
            </div>
        </div>
    </div>
    @if (Model.ViewMore)
    {
        <div id="MoreBtn@(Model.DivId)" class="courses-view-more-area mt-20 mb-30 text-center">
            <div class="row">
                <div class="col-xl-12">
                    <div class="courses-view-more-btn">
                        <button onclick="LoadMoreEvents('@Model.DivId',@Model.Flag,@Model.EventType)"
                        class="btn gray-border-btn"><span class="">@ESTA.Resources.EventsNews.viewMore</span></button>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div>
        <h2>@ESTA.Resources.EventsNews.StayTuned__</h2>
    </div>
}
