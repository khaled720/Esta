@{
}
@model ESTA.ViewModels.DisplayEvents
<div class="card">
    <div class="card-body">
        <h5 class="card-title text-center">@Model.Title</h5>
        <img src="@Model.Image" class="rounded mx-auto d-block" alt="EventImg">
        <hr>
        <div class="mt-3">
            @Html.Raw(Model.Description)
        </div>
        

        <div class="col-12 mt-3">
            <a asp-action="EditEvent" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a>
            <a asp-action="DeleteEvent" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>