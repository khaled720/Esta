@{
}
@model List<ESTA.ViewModels.DisplayEvents>

<div id="cards" class="row row-cols-1 row-cols-md-4 g-4">
    @if (Model.Count > 0)
    {
        await Html.RenderPartialAsync("_renderEvent", new ESTA.ViewModels.DisplayEventPartial()
                {
                    Events = Model
                });
        <button class="btn btn-link mt-2" onclick="LoadMoreEvents()">Load More</button>

    }
    else
    {
        <div>
            <h2>There's no events</h2>
        </div>
    }
</div>


@section Scripts{
    <script>
        var page = 0
        function LoadMoreEvents() {
            $.ajax({
                type: 'get',
                url: '/EventsNews/GetEventsPage',
                data: {
                    page: ++page
                },
                success: function (data) {
                    $('#cards').append(data);
                    console.log(data)
                },
                error: function (data) {
                    console.log(data)
                }
            });
        }

    </script>
}
