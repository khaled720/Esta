@{
}
@model ESTA.ViewModels.DisplayEventPartial

@foreach (var eventObj in Model.Events)
{
    <div class="col-xl-4 col-lg-4 col-md-6">
        <div class="blog-wrapper bg-grey mb-30">
            <div class="blog-thumb mb-25">
                <a href="news_details.html">
                    <img src="@eventObj.Image" style="height: 202px;" alt="">
                </a>
                @if (eventObj.Flag == 1)
                {
                    <span class="blog-category">News</span>
                }
                else
                {
                    <span class="blog-category">Event</span>
                }

            </div>
            <div class="blog-content">
                @if (eventObj.Date.HasValue)
                {
                    <div class="blog-meta">
                        <span>@eventObj.Date.Value.ToString("yyyy-MMM-dd")</span>
                </div>
                }
                <h5><a href="/EventsNews/GetEvent/@eventObj.Id">@eventObj.Title</a></h5>
                <p style="word-break: break-word;">@eventObj.Description...</p>
                <div class="read-more-btn">
                    <a class="" href="/EventsNews/GetEvent/@eventObj.Id"><span class="">Read More</span></a>
                </div>
            </div>
@*            <div class="row justify-content-lg-around row-cols-3 mb-2">
                <a asp-action="EditEvent" asp-route-id="@eventObj.Id" class="btn btn-secondary col" class="btn btn-primary">@ESTA.Resources.EventsNews.Edit</a>
                <a asp-action="DeleteEvent" asp-route-id="@eventObj.Id" class="btn btn-danger col">@ESTA.Resources.EventsNews.Delete</a>
            </div>*@
        </div>
    </div>
}

