@{
}
@model List<ESTA.ViewModels.DisplayEvents>

@foreach (var eventObj in Model)
{
    <div class="col-xl-4 col-lg-4 col-md-6">
        <div class="blog-wrapper bg-grey mb-30">
            <div class="blog-thumb mb-25">
                <a href="/EventsNews/GetEvent/@eventObj.Id">
                    <img src="@Url.Content(eventObj.Image)" style="height: 202px;" alt="">
                </a>
                @if (eventObj.Flag == 1)
                {
                    <span class="blog-category">@ESTA.Resources.EventsNews.News</span>
                }
                else
                {
                    <span class="blog-category">@ESTA.Resources.EventsNews.Event</span>
                }

            </div>
            <div class="blog-content">
                @if (eventObj.Date.HasValue)
                {
                    <div class="blog-meta">
                        <span>@eventObj.Date.Value.ToString("yyyy-MMM-dd")</span>
                    </div>
                }
                else
                {
                    <div class="blog-meta">
                        <span>-</span>
                    </div>
                }
                <h5><a asp-controller="EventsNews" asp-action="GetEvent" asp-route-id="@eventObj.Id">@eventObj.Title</a></h5>
                <p>@eventObj.Description...</p>
                <div class="read-more-btn">
                    <a class="" asp-controller="EventsNews" asp-action="GetEvent" asp-route-id="@eventObj.Id">
                        <span class="">
                            @ESTA.Resources.EventsNews.readMore
                        </span>
                    </a>
                </div>
            </div>
        </div>
    </div>
}

