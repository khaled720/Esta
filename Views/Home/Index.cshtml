@{
    ViewData["Title"] = "Home Page";
}
@model List<ESTA.Models.Course>




<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Egyptian Society Technical Analysts</p>
</div>



<div style="display:flex;justify-content:space-between;align-items:center">
    <h2>All Courses</h2>

    @Html.ActionLink("Join Our bla bla", "Register", 
    "Courses",new {}, new { @class = "btn btn-primary" })
</div>

<input id="search" placeholder="Search for course.... " oninput="SearchForCourse()" 
    class="form-control" />

<br />
<div id="courses-grid" style="display:grid;gap:15px; grid-template-columns:1fr 1fr 1fr 1fr">
    @foreach (var item in Model)
    {
       
    <div class="card" style="height:fit-content; position:relative">
        <a href="home/coursedetails/@item.Id" class="btn btn-primary"  style="position:absolute;bottom:5px;right:5px">More</a>
            <div class="card-header" style="
position:absolute;top:0;left:0;right:0;

background: rgba(100%,100%,100%,50%);
    backdrop-filter: blur(5px);">
      <h5>
 @item.Title

      </h5>
       </div>
       @* <img src="data:image/jpeg;base64," />
        *@     <img src="@item.PhotoPath" height="200px" />


        <div class="card-body">
     Starts at:    @item.StartDate.Value.ToShortDateString()
               <br> Price: <strong style="color:green"> @item.Price.ToString("c")</strong>
       </div>
       </div> 
    }

  






   


    </div>
 <style>
        .card{
        transition:0.5s ease-in-out; overflow:hidden;
        /*z-index:10;
        */
        }

        .card:hover{
        
        transform:scale(1.1,1.1)
        
        }

    </style>
<script src="~/js/course.js"></script>


