@using Microsoft.Extensions.Localization


@model List<ESTA.Models.Contact>
@inject IStringLocalizer<ESTA.SharedResource> localizer;
  <!-- slider-start -->
<div class="slider-area">
    <div class="page-title">
        <div class="single-slider slider-height slider-height-breadcrumb d-flex align-items-center" style="background-image: url(/template/img/inner-bg.png);">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="slider-content slider-content-breadcrumb text-center">
                            <h1 class="white-color f-700">@localizer["contacts"]</h1>
                            <nav class="text-center" aria-label="breadcrumb">
                                <ol class="breadcrumb justify-content-center">
                                    <li class="breadcrumb-item"><a href="#">@localizer["home"]</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">@localizer["contacts"]</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- slider-end -->
@if (Model.Count>0) 
{ 
<div class="contactUs-section pt-50 pb-50">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-5 mb-5 mb-lg-0">
                <div class="bg-light d-flex flex-column justify-content-center px-5" style="height: 450px;">
                    <div class="d-flex align-items-center mb-5">
                        <div class="contact-icon primary-bg">
                            <i class="ti-location-pin"></i>
                        </div>
                        <div class="mt-n1">
                                <h4>@localizer["ourlocation"]</h4>
                            <p class="m-0">@Model[0].AddressEn.ToString() </p>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-5">
                        <div class="contact-icon bg-red">
                            <i class="ti-headphone"></i>
                        </div>
                        <div class="mt-n1">
                                <h4>@localizer["callus"]</h4>
                            <p class="m-0">@Model[0].PhoneLines.ToString()</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="contact-icon bg-secondary">
                            <i class="ti-email"></i>
                        </div>
                        <div class="mt-n1">
                                <h4>@localizer["emailus"]</h4>
                            <a href="#" class="m-0">@Model[0].Emails.ToString()</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="section-title position-relative mb-4">
                    <h6 class="d-inline-block position-relative pb-2 contactHelpText">@localizer["help"]</h6>
                        <h1 class="display-4">@localizer["sendusmessage"]</h1>
                </div>
                <div class="contact-form">
                    <form id="contactform">
                        <div class="row">
                            <div class="col-6 form-group">
                                <input type="text" id="name" class="form-control border-top-0 border-right-0 border-left-0 p-0" placeholder=@localizer["urname"] required="required">
                            </div>
                            <div class="col-6 form-group">
                                    <input type="email" id="email" class="form-control border-top-0 border-right-0 border-left-0 p-0" placeholder=@localizer["uremail"] required="required">
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="text" id="subject" class="form-control border-top-0 border-right-0 border-left-0 p-0" placeholder=@localizer["subject"] required="required">
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" id="message" border-top-0 border-right-0 border-left-0 p-0" rows="5" placeholder=@localizer["urmsg"] required="required"></textarea>
                        </div>
                        <div>
                            <button class="btn btn-primary py-3 px-5" type="button" id="submit">@localizer["send"]</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- courses end -->


}else{
    <div class="contactUs-section pt-50 pb-50">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-5 mb-5 mb-lg-0">
                    <div class="bg-light d-flex flex-column justify-content-center px-5" style="height: 450px;">
                        <div class="d-flex align-items-center mb-5">
                            <div class="contact-icon primary-bg">
                                <i class="ti-location-pin"></i>
                            </div>
                            <div class="mt-n1">
                                <h4>@localizer["ourlocation"]</h4>
                                <p class="m-0"> </p>
                            </div>
                        </div>
                        <div class="d-flex align-items-center mb-5">
                            <div class="contact-icon bg-red">
                                <i class="ti-headphone"></i>
                            </div>
                            <div class="mt-n1">
                                <h4>@localizer["callus"]</h4>
                                <p class="m-0"></p>
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="contact-icon bg-secondary">
                                <i class="ti-email"></i>
                            </div>
                            <div class="mt-n1">
                                <h4>@localizer["emailus"]</h4>
                                <a href="#" class="m-0"></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="section-title position-relative mb-4">
                        <h6 class="d-inline-block position-relative pb-2 contactHelpText">@localizer["help"]</h6>
                        <h1 class="display-4">@localizer["sendusmessage"]</h1>
                    </div>
                    <div class="contact-form">
                        <form id="contactform">
                            <div class="row">
                                <div class="col-6 form-group">
                                    <input type="text" id="name" class="form-control border-top-0 border-right-0 border-left-0 p-0" placeholder=@localizer["urname"] required="required">
                                </div>
                                <div class="col-6 form-group">
                                    <input type="email" id="email" class="form-control border-top-0 border-right-0 border-left-0 p-0" placeholder=@localizer["uremail"] required="required">
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="text" id="subject" class="form-control border-top-0 border-right-0 border-left-0 p-0" placeholder=@localizer["subject"] required="required">
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" id="message" border-top-0 border-right-0 border-left-0 p-0" rows="5" placeholder=@localizer["urmsg"] required="required"></textarea>
                            </div>
                            <div>
                                <button class="btn btn-primary py-3 px-5" onclick="SendEmail()" type="button" id="sendEmailbtn">@localizer["send"]</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

}



 



