@{
}
@using ESTA.ViewModels
@model IEnumerable<DisplayEvents>
<div id="blog" class="latest_news-area gray-bg pt-70 pb-70">
    <div class="container">
        <div class="row">
            <div class="col-xl-6 offset-xl-3 col-md-8 offset-md-2 aos-init aos-animate" data-aos="fade-up"
                      data-aos-anchor-placement="center-center" data-aos-duration="1000">
                <div class="section-title mb-50 text-center">
                    <div class="section-title-heading mb-20">
                        <h1 class="primary-color">News & Events</h1>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var news in Model)
            {
                <div class="col-xl-4 col-lg-4 col-md-6 aos-init aos-animate" data-aos="zoom-in-up" data-aos-duration="1500">
                    <div class="blog-wrapper mb-30">
                        <div class="blog-thumb mb-25">
                            <a href="/EventsNews/GetEvent/@news.Id"><img src="@news.Image" alt=""></a>
                            @if (news.Flag == 0)
                            {
                                <span class="blog-category">News</span>
                            }
                            else
                            {
                                <span class="blog-category">Events</span>
                            }
                        </div>
                        <div class="blog-content">

                            <div class="blog-meta">
                                <span>@news.Date.Value.ToString("yyyy-MMM-dd")</span>
                            </div>


                            <h5><a href="/EventsNews/GetEvent/@news.Id">@news.Title</a></h5>
                            <p>
                                @news.Description...
                            </p>
                            <div class="read-more-btn">
                                <a class="" href="/EventsNews/GetEvent/@news.Id"><span class="">Read More</span></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="courses-view-more-area mt-20 mb-30 text-center">
            <div class="row">
                <div class="col-xl-12">
                    <div class="courses-view-more-btn">
                        <a class="btn gray-border-btn" href="/EventsNews/Index"><span class="">view more</span></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
