@{
}
@using ESTA.ViewModels
@model DisplayEvents


<div id="upComingEvents" class="events-area events-bg-height pt-70 pb-30">
    <div class="container">
        <div class="row">
            <div class="col-xl-6 offset-xl-3 col-lg-6 offset-lg-2 col-md-10 offset-md-1 aos-init aos-animate" data-aos="fade-up"
                      data-aos-anchor-placement="center-center" data-aos-duration="1000">
                <div class="section-title mb-50 text-center">
                    <div class="section-title-heading mb-20">
                        <h1 class="primary-color">@ESTA.Resources.EventsNews.UpcomingEvents</h1>
                    </div>

                </div>
            </div>
        </div>
        <div class="events-list mb-30">
            <div class="row">
                @if (Model != null)
                {
                    <div class="col-xl-5 col-lg-5 aos-init aos-animate" data-aos="fade-up"
                         data-aos-duration="1500">
                        <div class="single-events mb-30">
                            <div class="events-wrapper">
                                <div class="events-inner d-flex" style="max-height: 194px;">
                                    <div class="events-thumb">
                                        <img class="img-fluid rounded-left" src="@Model.Image" alt="" style="height:195px">
                                    </div>
                                    <div class="events-text">
                                        <div class="event-text-heading mb-20">
                                            <div class="events-calendar text-center f-left">
                                                @if (Model.Date.HasValue)
                                                {
                                                    <span class="date">@Model.Date.Value.Day</span>
                                                    <span class="month">
                                                        @Model.Date.Value.ToString("MMM-yyyy")
                                                    </span>
                                                }

                                            </div>
                                            <div class="events-text-title clearfix">
                                                <a href="/EventsNews/GetEvent/@Model.Id">
                                                    <h4>@Model.Title</h4>
                                                </a>
                                                @if (Model.Date.HasValue)
                                                {
                                                    <div class="time-area">
                                                        <span class="ti-time"></span>
                                                        <span class="published-time">@Model.Date.Value.ToString("hh:mm tt")</span>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                        <div class="events-para">
                                            <p style="word-break: break-word;">@Model.Description</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                }
                else
                {
                    <div class="col-xl-5 col-lg-5 aos-init aos-animate" data-aos="fade-up"
                         data-aos-duration="1500">
                        <div class="single-events mb-30">
                            <div class="events-wrapper">
                                <div class="events-inner d-flex">
                                    <div class="events-text">
                                        <div class="event-text-heading mb-20">
                                            <div class="events-text-title clearfix">
                                                <h4>@ESTA.Resources.EventsNews.StayTuned__</h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <div class="col-xl-7 col-lg-7 aos-init aos-animate" data-aos="fade-down"
                         data-aos-duration="1500">
                    <div class="calenderDiv">
                        @{
                            await Html.RenderPartialAsync("_CalendarPartial");
                        }
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts{
    <script src="~/js/course.js"></script>
}