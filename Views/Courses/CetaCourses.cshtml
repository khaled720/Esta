@{
}
@model List<ESTA.Models.Course>
   <div class="slider-area">
        <div class="page-title">
            <div class="single-slider slider-height slider-height-breadcrumb d-flex align-items-center" style="background-image: url(/template/img/inner-bg.png);">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="slider-content slider-content-breadcrumb text-center">
                                <h1 class="white-color f-700">Ceta Courses</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- slider-end -->
    <div class="course-details-area  pt-50 pb-50">
        <div class="container">
            <div class="row">
                <div class="col-xl-12 col-lg-12">
                    <div class="row">


                    @if (Model == null || Model.Count == 0)
                    {
                        <h4 class="text-danger">
                        No Courses Found !
                    </h4>
                    }

                    @foreach (var item in Model)
{
                        <div class="col-xl-4 col-lg-4 col-md-6 aos-init aos-animate" data-aos="zoom-in-up" data-aos-duration="1500">
                            <div class="courses-wrapper courses-wrapper-3 mb-30">
                                <div class="courses-thumb">
                                    <a href="course_details.html"><img src="@item.PhotoPath" alt=""></a>
                                </div>
                                <div class="courses-content courses-content-3 clearfix">
                                    <div class="courses-heading mt-25 d-flex">
                                        <div class="course-title-3">
                                            <h1><a href="course_details.html">@item.Title</a></h1>
                                        </div>
                                        <div class="courses-pricing-3">
                                            <span>$@item.Price</span>
                                        </div>
                                    </div>
                                    <div class="courses-para mt-15">
                                        <p>@item.Description.Substring(0,50) ..</p>
                                    </div>
                                    <div class="course-date mt-15">
                                        <span class="course-date-icon ti-calendar"></span>
                                        <span class="start-date-text">Start Date </span>
                                        <span>@item.StartDate.Value.ToShortDateString()</span>
                                    </div>
                                    <div class="courses-wrapper-bottom clearfix mt-35">
                                        <div class="courses-button">
                                            <a href="/courses/coursedetails/@item.Id">View Details</a>


                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
            
                        
                        
                        
                        
                          
                    }

                      
                        
                        
              </div>

                </div>

            </div>
        </div>
    </div>
